Options All -Indexes

<files .htaccess>
order allow,deny
deny from all
</files>


#-----------------------MOD_REWRITE-------------------------

Options +FollowSymLinks

RewriteEngine On

RewriteRule ^home$ /index.php [NC,L]
RewriteRule ^([a-zA-Z]+)$ /$1.php [NC,L]

#-----------------------END_REWRITE-------------------------


# 404 Page
ErrorDocument 404 /404.php
